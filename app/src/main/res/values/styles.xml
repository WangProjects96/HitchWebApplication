<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--la barre entre la petite barre et le layout-->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--la petite barre en haut-->
        <item name="android:statusBarColor">@color/black</item>
        <!--la barre du bas-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.Inscription" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccentRegister</item>
        <item name="android:background">@color/B_Inscription</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Fade" parent="Theme.AppCompat">
        <item name="android:colorEdgeEffect">@color/black</item>
    </style>
</resources>
